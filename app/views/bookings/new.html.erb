
<div class="container">
  <div class="row">
    <div class="col">

<h1>Make a booking</h1>
      <%= form_with model: [@car, @booking] do |f| %>
        <%= f.label :start_date %>
        <%= f.date_field :start_date %>

        <%= f.label :end_date %>
        <%= f.date_field :end_date %>

        <%= f.hidden_field :car_id, value: @car.id %>

        <%= f.submit "Book Car" %>
      <% end %>

      </div>
  </div>
</div>
