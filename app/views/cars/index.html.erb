
<div class="container">
  <div class="row">
    <div class="col">


    <h1>Vintage Cars</h1>
    <p>Find out the best cars in the market</p>
    <div class="cards">
      <% @cars.each do |car| %>
        <%= link_to car_path(car), style: "text-decoration: none;" do  %>
          <div class="card-trip">
            <img src="https://source.unsplash.com/random/?car" />
            <div class="card-trip-infos">
              <div>
                <h2><%= car.name %></h2>
                <p><%= car.category %></p>
              </div>
              <h2 class="card-trip-pricing"><%= car.price %>â‚¬</h2>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    </div>
  </div>
</div>
