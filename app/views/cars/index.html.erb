<div class="container">
  <!-- Formulaire de recherche -->

  <p class="title">Find out the best car deals in the market</p>

  <div class="row">
    <div class="col">
      <div class="search-container">
    <%= form_with(url: cars_path, method: "get", class: "search-form") do |form| %>
      <div class="form-group">
        <%= form.text_field :search, placeholder: "Car Name" %>
      </div>
      <div class="form-group">
        <%= form.select :category, options_for_select(['Citadine', 'Familiale', 'SUV', 'Sportive']), { include_blank: "Car Category" }, placeholder: "Car Category" %>
      </div>
      <div class="form-group">
        <%= form.text_field :price_from, placeholder: "Min Price" %>
      </div>
      <div class="form-group">
        <%= form.text_field :price_to, placeholder: "Max Price" %>
      </div>
      <div class="form-group">
        <input type="text" id="location" name="location" placeholder="Enter your address">
      </div>
      <%= form.submit "Search" %>
      <%= link_to 'Clear my search', root_path, class: 'btn btn-secondary' %>
      <% end %>
      </div>
    </div>
  </div>

      <!-- Cards for each car -->
  <div class="row">
    <div class="col-8">
      <div class="cards">
        <% @cars.each do |car| %>
        <%= link_to car_path(car), style: "text-decoration:none;" do %>
            <div class="card-trip">
              <%= image_tag car.photo.attached? ? cl_image_path(car.photo.key) : "https://source.unsplash.com/random/?car" %>
              <div class="card-trip-infos">
                <div>
                  <h6><%= car.name %></h6>
                  <p><%= car.category %></p>
                </div>
                <h2 class="card-trip-pricing"><%= car.price %>â‚¬</h2>
              </div>
            </div>
            <% end %>
        <% end %>
      </div>
    </div>

    <div class="col-4">
      <div id="map" style="height: 600px;" data-controller="map" data-map-markers-value="<%= @markers.to_json %>" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>
</div>
