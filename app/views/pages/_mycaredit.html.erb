<!-- app/views/cars/new.html.erb -->

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12 my-3 car-form">
      <h3>Entrez les informations de votre véhicule</h3>
      <%= simple_form_for (car), html:{ method: :put, data: { controller: "toggle" }} do |form|%>
        <%= form.input :name, label: 'Nom du véhicule' %>

        <%= form.input :address, label: 'Adresse du véhicule' %>

        <%= form.input :category, label: 'Catégorie', collection: ['Citadine', 'Familiale', 'SUV', 'Sportive'],
                      include_blank: 'Choisissez une catégorie' %>
        <%= form.input :description, label: 'Description' %>
        <%= form.input :price, label: 'Prix par jour de location' %>
        <%= form.input :photo, as: :file, label: 'Photo', input_html: { class: 'mt-3' } %>
        <%= form.hidden_field :user_id, value: current_user.id %>
        <div class="d-grid gap-2 col-6 mx-auto">
          <%= form.button :submit, 'Soumettre', class: 'btn btn-primary btn-submit mt-5' %>
        </div>
      <% end %>


    </div>
  </div>
</div>
