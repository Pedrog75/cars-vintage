<!-- app/views/cars/new.html.erb -->

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12 my-3 car-form">
      <h3>Entrez les informations de votre véhicule</h3>


      <%= form_with model: car, local: true, html: {method: :put, class: "form-group" } do |form| %>
        <%= form.label :name, "Nom du véhicule" %>
        <%= form.text_field :name %>

        <%= form.label :address, "Adresse du véhicule" %>
        <%= form.text_field :address %>

        <%= form.label :category, "Catégorie" %>
        <%= form.select :category, ['Citadine', 'Familiale', 'SUV', 'Sportive'], { include_blank: 'Choisissez une catégorie' } %>

        <%= form.label :description, "Description" %>
        <%= form.text_area :description %>

        <%= form.label :price, "Prix par jour de location" %>
        <%= form.text_field :price %>

        <%= form.label :photo, class:"mt-3" %>
        <%= form.file_field :photo %>

        <%= form.hidden_field :user_id, value: current_user.id %>

      <div class="d-grid gap-2 col-6 mx-auto">
         <%= form.submit "Soumettre", class: "btn btn-primary btn-submit mt-5" %>
      </div>

      <% end %>
  
    </div>
  </div>
</div>
